<?xml version="1.0" encoding="UTF-8" ?>
<!-- ## 50 +- VALUE -->
<CONFIG>
    <GC>
        <CONTENT VALUE="10">100</CONTENT>
        <CONTENT VALUE="15">-100</CONTENT>
        <CONTENT VALUE="20">-300</CONTENT>
        <CONTENT VALUE="25">-800</CONTENT>
        <CONTENT VALUE="50">-1500</CONTENT>
    </GC>
    <!-- ## nucleotide in position 01:  -->
    <FIRST>
        <BASE LETTER="A">45</BASE>
        <BASE LETTER="T">45</BASE>
        <BASE LETTER="C">0</BASE>
        <BASE LETTER="G">0</BASE>
        <BASE LETTER="N">-1500</BASE>
    </FIRST>
    <!-- ## nucleotide in last position:  -->
    <LAST>
        <BASE LETTER="A">130</BASE>
        <BASE LETTER="T">100</BASE>
        <BASE LETTER="C">0</BASE>
        <BASE LETTER="G">0</BASE>
        <BASE LETTER="N">-1500</BASE>
    </LAST>
    <!-- ## GC content position 02-07: >= VALUE -->
    <GC_0207>
        <CONTENT VALUE="79">156</CONTENT>
        <CONTENT VALUE="60">-83</CONTENT>
        <CONTENT VALUE="50">-320</CONTENT>
        <CONTENT VALUE="0">-1500</CONTENT>
    </GC_0207>
    <!-- ## AT content last 6 positions: >= VALUE -->
    <AT_LAST6>
        <CONTENT VALUE="79">156</CONTENT>
        <CONTENT VALUE="60">-83</CONTENT>
        <CONTENT VALUE="50">-320</CONTENT>
        <CONTENT VALUE="0">-1500</CONTENT>
    </AT_LAST6>
    <!-- ## nucleotide in Position +1 :  -->
    <PLUS_1>
        <BASE LETTER="A">130</BASE>
        <BASE LETTER="T">100</BASE>
        <BASE LETTER="C">0</BASE>
        <BASE LETTER="G">0</BASE>
        <BASE LETTER="N">0</BASE>
    </PLUS_1>
    <!-- ## nucleotide in position +2:  -->
    <PLUS_2>
        <BASE LETTER="A">80</BASE>
        <BASE LETTER="T">80</BASE>
        <BASE LETTER="C">0</BASE>
        <BASE LETTER="G">0</BASE>
        <BASE LETTER="N">0</BASE>
    </PLUS_2>
    <!-- ## offset from the gap in bp: >= BASES -->
    <OFFSET>
        <DISTANCE BASES="0">-1000</DISTANCE>
        <DISTANCE BASES="30">-600</DISTANCE>
        <DISTANCE BASES="50">-500</DISTANCE>
        <DISTANCE BASES="80">-400</DISTANCE>
        <DISTANCE BASES="110">-50</DISTANCE>
        <DISTANCE BASES="150">250</DISTANCE>
    </OFFSET>
    <!-- ## big offset from the gap: >= DISTANCE -> MULT per base -->
    <MAX_OFFSET>
        <DISTANCE>150</DISTANCE>
        <MULT>-2</MULT>
    </MAX_OFFSET>
    <!-- ## VALUE for each base contained in a repeat -->
    <REPEAT>-78</REPEAT>
    <!-- ## VALUE for each 'N' within the sequences -->
    <N_PENALTY>-1500</N_PENALTY>
    <!-- ## VALUE for possible backfolds of the last 4 bases -->
    <BACKFOLD>-1500</BACKFOLD>
    <!-- ## homopolymers > CNT bp -> SCORE -->
    <HOMOPOLY>
        <CNT>3</CNT>
        <SCORE>-200</SCORE>
    </HOMOPOLY>
    <!-- ## Annealing-Temp: 60 +- VALUE -->
    <ANNEAL>
        <TEMP VALUE="2">200</TEMP>
        <TEMP VALUE="6">0</TEMP>
        <TEMP VALUE="100">-1500</TEMP>
    </ANNEAL>
    <!-- ## foreach base distance to IDEAL length: SCORE malus -->
    <LENGTH>
        <IDEAL>20.5</IDEAL>
        <SCORE>-2</SCORE>
    </LENGTH>
</CONFIG>